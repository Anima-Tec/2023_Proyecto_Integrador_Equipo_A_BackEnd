// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/masfocodb?schema=public"
}

model Localidad {
  id        Int         @id @default(autoincrement())
  name      String
  Community Community[] @relation("CommunityLocalidad")
  Oficina   Oficina[]   @relation("OficinaLocalidad")
}

model Community {
  id          Int       @id @default(autoincrement())
  name        String
  domain      String
  idLocalidad Int       @map("idLocalidad")
  Localidad   Localidad @relation("CommunityLocalidad", fields: [idLocalidad], references: [id])
  Oficina     Oficina[] @relation("OficinaCommunity")
  User        User[]    @relation("UserCommunity")
}

model Oficina {
  id          Int       @id @default(autoincrement())
  name        String
  direccion   String
  piso        Int?
  idLocalidad Int       @map("idLocalidad")
  idCommunity Int       @map("idCommunity")
  Localidad   Localidad @relation("OficinaLocalidad", fields: [idLocalidad], references: [id])
  Community   Community @relation("OficinaCommunity", fields: [idCommunity], references: [id])
  users       User[]
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  Oficina     Oficina?  @relation(fields: [oficinaId], references: [id])
  oficinaId   Int?
  idCommunity Int
  Community   Community @relation("UserCommunity", fields: [idCommunity], references: [id])
  idLocalidad Int       @map("idLocalidad")
  Report      Report[]
}

enum Role {
  Supervisor
  Tecnico
  User
}

model Report {
  id           Int       @id @default(autoincrement())
  title        String
  description  String    @db.VarChar(500)
  image        String?   @db.VarChar(200)
  creationDate DateTime
  endDate      DateTime?
  idUser       Int       @map("idUser")
  user         User      @relation(fields: [idUser], references: [id])
  status       Status
  urgency      Urgency
}

enum Status {
  New
  InProgress
  InValidation
  Closed
}

enum Urgency {
  Low
  Medium
  High
  Critical
}
